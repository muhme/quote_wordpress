{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "zitat-service/random-quote",
	"description": "Displays a random quote from the collection of the user community zitat-service.de.",
	"version": "1.3.0",
	"title": "Random Quote",
	"category": "widgets",
	"example": {},
	"supports": {
		"color": {
			"background": true,
			"text": true
		},
		"dimensions": {
            "minHeight": true
		},
		"html": false,
		"spacing": {
			"margin": true,
			"padding": true, 
			"blockGap": true
		},
		"typography": {
			"fontSize": true
		}
	},
	"attributes": {
		"language": {
			"type": "string",
			"default": "all"
		}
	},
	"textdomain": "zitat-service",
	"editorScript": "file:./index.js",
	"render": "file:./render.php",
	"style": "file:./style-index.css"
}
